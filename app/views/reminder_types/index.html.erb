<h3>Reminder Types</h3>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th> Actions </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminder_types.each do |reminder_type| %>
      <tr>
        <td><%= reminder_type.name %></td>
        <td><%= link_to 'Show', reminder_type, class: "text-primary" %></td>
        <td><%= link_to 'Edit', edit_reminder_type_path(reminder_type), class: "text-success" %></td>
        <td><%= link_to 'Destroy', reminder_type, method: :delete, data: { confirm: 'Are you sure?'}, class: "text-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder Type', new_reminder_type_path %>
